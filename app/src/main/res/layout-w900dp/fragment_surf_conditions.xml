<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/surfConditionsOverviewFragment"
        android:name="com.bulan_baru.surf_forecast.SurfConditionsOverviewFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="12"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/surfConditionsLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@drawable/divider_for_horizontal_linear_layout"
        android:dividerPadding="4dp"
        android:orientation="horizontal"
        android:showDividers="middle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/surfConditionsOverviewFragment">

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>